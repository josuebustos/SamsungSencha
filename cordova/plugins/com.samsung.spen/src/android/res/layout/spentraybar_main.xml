<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/spen_traybar_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    <RelativeLayout
        android:id="@+id/spen_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@null"
        android:orientation="horizontal" >
        <ImageButton
        android:id="@+id/penBtn"
     android:layout_width="28dp"
     android:layout_height="24dp"
     android:layout_gravity="center"
     android:background="@null"
     android:adjustViewBounds="true"
     android:visibility="gone"
     android:scaleType="fitCenter"
     android:src="@drawable/snote_toolbar_icon_fountainpen_normal" 
     android:contentDescription="@string/toolbar_pencolor_btn" />
    <ImageButton
     android:id="@+id/EraserBtn"
     android:layout_width="28dp"
     android:layout_height="24dp"
     android:background="@null"
     android:adjustViewBounds="true"
     android:layout_gravity="center"
     android:visibility="gone"
     android:scaleType="fitCenter"
     android:src="@drawable/snote_toolbar_icon_eraser_normal" 
     android:contentDescription="@string/toolbar_eraser_btn" />
    <ImageButton
     android:id="@+id/undoBtn"
     android:layout_width="28dp"
     android:layout_height="24dp"
     android:background="@null"
     android:adjustViewBounds="true"
     android:layout_gravity="center"
     android:visibility="gone"
     android:scaleType="fitCenter"
     android:src="@drawable/spen_toolbar_undo" 
     android:contentDescription="@string/toolbar_undo_btn" />
    <ImageButton
     android:id="@+id/redoBtn"
     android:layout_width="28dp"
     android:layout_height="24dp"
     android:background="@null"
     android:layout_gravity="center"
     android:visibility="gone"
     android:adjustViewBounds="true"
     android:scaleType="fitCenter"
     android:src="@drawable/spen_toolbar_redo" 
     android:contentDescription="@string/toolbar_redo_btn" />
    <ImageButton
     android:id="@+id/changeBgBtn"
     android:layout_width="28dp"
     android:layout_height="24dp"
     android:background="@null"
     android:layout_gravity="center"
     android:adjustViewBounds="true"
     android:visibility="gone"
     android:scaleType="fitCenter"
     android:src="@drawable/tool_ic_attach" 
     android:contentDescription="@string/toolbar_changebg_btn" />
    <ImageButton
     android:id="@+id/selectionBtn"
     android:layout_width="28dp"
     android:layout_height="24dp"
     android:background="@null"
     android:layout_gravity="center"
     android:adjustViewBounds="true"
     android:scaleType="fitCenter"
     android:visibility="gone"
     android:src="@drawable/actionmemo_top_icon_select" 
     android:contentDescription="@string/toolbar_selection_btn" />
    </LinearLayout>
    <ImageButton
    android:id="@+id/saveBtn"
     android:layout_width="28dp"
     android:layout_height="24dp"
     android:background="@null"
     android:adjustViewBounds="true"
     android:layout_gravity="center"
     android:layout_alignParentRight="true"
     android:scaleType="fitCenter"
     android:visibility="gone"
     android:src="@drawable/quick_popup_icon_save_normal" 
     android:contentDescription="@string/toolbar_done_btn" />
     </RelativeLayout>
    <LinearLayout 
        android:id="@+id/edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@null">
            <ImageButton
            android:id="@+id/editBtn"
            android:layout_width="28dp"
            android:layout_height="24dp"
            android:background="@null"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:visibility="gone"
            android:scaleType="fitCenter"
            android:src="@drawable/tool_ic_gesture" 
            android:contentDescription="@string/toolbar_edit_btn" />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/color_select_layout"
            android:layout_width="184dp"
            android:layout_height="34dp"
            android:background="@drawable/quickmemo_bubble"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="2dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:clickable="true">
            <ImageButton
                android:id="@+id/pen1_btn"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/spen_color_01" 
                android:background="@null"
                android:scaleType="fitCenter"
                android:contentDescription="@string/string_black"/>
            <ImageButton
                android:id="@+id/pen2_btn"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/spen_color_02" 
                android:background="@null"
                android:scaleType="fitCenter"
                android:contentDescription="@string/string_green"/>
            <ImageButton
                android:id="@+id/pen3_btn"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/spen_color_03" 
                android:scaleType="fitCenter"
                android:background="@null"
                android:contentDescription="@string/string_iris_blue"/>
            <ImageButton
                android:id="@+id/pen4_btn"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/spen_color_04" 
                android:background="@null"
                android:scaleType="fitCenter"
                android:contentDescription="@string/string_medium_purple"/>
            <ImageButton
                android:id="@+id/pen5_btn"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/spen_color_05" 
                android:background="@null"
                android:scaleType="fitCenter"
                android:contentDescription="@string/string_hot_pink"/>
            <ImageButton
                android:id="@+id/pen6_btn"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/spen_color_06" 
                android:background="@null"
                android:scaleType="fitCenter"
                android:contentDescription="@string/string_red"/>
            <ImageButton
                android:id="@+id/pen7_btn"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/spen_color_07" 
                android:background="@null"
                android:scaleType="fitCenter"
                android:contentDescription="@string/string_orange"/>
        </LinearLayout>
        <RelativeLayout 
            android:id="@+id/poup_pages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@null">
            <ImageButton
                android:id="@+id/deletePage"
                android:layout_width="28dp"
                android:layout_height="26dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/snote_page_delete_normal" 
                android:background="@null"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:visibility="gone"
                android:contentDescription="@string/toolbar_deletepage_button"/>

            <TextView 
                android:id="@+id/pageNumber"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                android:contentDescription="@string/toolbar_pagenumber"
                android:text="1/1" />       
            <ImageButton
                android:id="@+id/navigateLeft"
                android:layout_width="28dp"
                android:layout_height="26dp"
                android:src="@drawable/snote_page_left_normal" 
                android:background="@null"
                android:adjustViewBounds="true"
                android:layout_toLeftOf="@id/pageNumber"
                android:scaleType="fitCenter"
                android:visibility="gone"
                android:contentDescription="@string/toolbar_previouspage_button"/>
            <ImageButton
                android:id="@+id/navigateRight"
                android:layout_width="28dp"
                android:layout_height="26dp"
                android:src="@drawable/snote_page_right_normal" 
                android:background="@null"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_toRightOf="@id/pageNumber"
                android:visibility="gone"
                android:contentDescription="@string/toolbar_nextpage_button"/>
            <ImageButton
                android:id="@+id/addPage"
                android:layout_width="28dp"
                android:layout_height="26dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/snote_page_add_normal"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@null"
                android:visibility="gone"
                android:contentDescription="@string/toolbar_addpage_button"/>            
        </RelativeLayout>
</RelativeLayout>
